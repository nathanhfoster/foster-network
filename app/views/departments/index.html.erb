<table>
  <thead>
    <tr>
      <h1 class="pull-left">Departments</h1>
      <th colspan="3"></th>
    </tr>
  </thead>

<div class="container">
    <div class="row clearfix">
    <div class="col-md-12 column">
      <table class="table table-bordered table-hover" id="tab_logic">
        <thead>
          <tr >
            <th class="text-center">
              Name
            </th>
            <th class="text-center">
              Website Link
            </th>
          </tr>
        </thead>
        <tbody>
        <% @departments.each do |department| %>
        <tr>
          <!-- Name -->
          <td><div class="text-center"><%= department.d_name %></div></td>
          <!-- Website Link -->
          <td>
            <div class="text-center">
              <a href="<%= department.link %>" class="btn btn-default" target="_blank">Link</a>
            </div>
          </td>

        </tr>
        <% end %>    
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to 'New Department', new_department_path, {:id => 'add_row', :class => 'btn btn-default'} %>
</div>
<br>
<%= link_to '', :back, {:class => 'glyphicon glyphicon-circle-arrow-left'} %></br>
  <tbody>
    
  </tbody>
</table>

